---
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import VehicleDetail from "../../components/VehicleDetail";

const { id } = Astro.params;
---

<Layout title={`Detalle del Vehículo - iCarSolutions`}>
  <div class="max-w-7xl mx-auto px-4 py-12">
    <a href="/" class="text-blue-600 hover:underline mb-6 inline-block font-semibold">
      ← Volver al catálogo
    </a>

    {id && <VehicleDetail vehicleId={id} client:load />}
  </div>
</Layout>
