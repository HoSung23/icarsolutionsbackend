---
export const prerender = false;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Autenticando...</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: linear-gradient(135deg, #000034 0%, #1e40af 50%, #f97316 100%);
      font-family: system-ui, -apple-system, sans-serif;
    }
    .loader {
      text-align: center;
      color: white;
    }
    .spinner {
      border: 4px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      border-top: 4px solid white;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="loader">
    <div class="spinner"></div>
    <p>Completando autenticación...</p>
  </div>

  <script>
    import { supabase } from '../../utils/supabase';

    async function handleAuthCallback() {
      try {
        // Obtener el usuario autenticado
        const { data: { user }, error } = await supabase.auth.getUser();
        
        if (error) {
          console.error('Error obteniendo usuario:', error);
          window.location.href = '/?error=auth_failed';
          return;
        }

        if (!user) {
          console.error('No hay usuario autenticado');
          window.location.href = '/?error=no_user';
          return;
        }

        // Verificar si el usuario ya existe en la tabla users
        const { data: existingUser, error: checkError } = await supabase
          .from('users')
          .select('*')
          .eq('id', user.id)
          .single();

        if (checkError && checkError.code !== 'PGRST116') {
          console.error('Error verificando usuario:', checkError);
        }

        // Si no existe, crear el usuario en la tabla users
        if (!existingUser) {
          const { error: insertError } = await supabase
            .from('users')
            .insert({
              id: user.id,
              email: user.email,
              nombre: user.user_metadata?.full_name || user.user_metadata?.name || user.email?.split('@')[0] || 'Usuario',
              rol: 'cliente',
            });

          if (insertError) {
            console.error('Error creando usuario:', insertError);
          }
        }

        // Guardar sesión en localStorage
        const userSession = {
          id: user.id,
          email: user.email || '',
          rol: existingUser?.rol || 'cliente',
          nombre: existingUser?.nombre || user.user_metadata?.full_name || user.user_metadata?.name || user.email?.split('@')[0] || 'Usuario',
        };

        localStorage.setItem('auth_session', JSON.stringify(userSession));

        // Redirigir al dashboard
        window.location.href = '/dashboard';

      } catch (err) {
        console.error('Error en callback de autenticación:', err);
        window.location.href = '/?error=callback_failed';
      }
    }

    // Ejecutar al cargar
    handleAuthCallback();
  </script>
</body>
</html>
