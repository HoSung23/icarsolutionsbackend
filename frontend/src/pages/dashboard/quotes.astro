---
import Layout from "../../layouts/Layout.astro";
import QuotesManagement from "../../components/QuotesManagement";

export const prerender = false;

// Verificar autenticación
const authSession = Astro.cookies.get("auth_session");
if (!authSession) {
  return Astro.redirect("/login");
}
---

<Layout title="Gestión de Cotizaciones - iCarSolutions">
  <div class="min-h-screen bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="mb-6">
        <a href="/dashboard" class="text-blue-600 hover:underline">← Volver al Dashboard</a>
      </div>
      <QuotesManagement client:load />
    </div>
  </div>
</Layout>
